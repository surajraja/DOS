<controls:ChildWindow x:Class="ContactMaster.ChildWindows.running"
           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
           xmlns:controls="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls"
           Width="400" Height="200" 
           Title="running">
    <Grid x:Name="LayoutRoot" Margin="2">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <TextBlock TextWrapping="Wrap" Grid.Row="0" HorizontalAlignment="Left"  Margin="10,12,0,0" FontSize="14">
            Your requests are in processing...
            <LineBreak></LineBreak>
            <LineBreak></LineBreak>
            You can click OK to close the window to continue working on another request.
        </TextBlock>
        <Button x:Name="OKButton" Content="OK" Click="OKButton_Click" Width="75" Height="23" HorizontalAlignment="Right" Margin="0,20,5,0" Grid.Row="1" />
    </Grid>
</controls:ChildWindow>